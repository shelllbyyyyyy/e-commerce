  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/server/main",
    "start:prod:auth": "node dist/apps/auth/main",
    "start:prod:user": "node dist/apps/user/main",
    "start:prod:product": "node dist/apps/product/main",
    "start:prod:root": "node dist/apps/root/main",
    "start:prod:inventory": "node dist/apps/inventory/main",
    "start:prod:cart": "node dist/apps/cart/main",
    "start:prod:order": "node dist/apps/order/main",
    "start:prod:billing": "node dist/apps/billing/main",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migration": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
